              <form action = "/Discount" method = "POST">
                <div class="form-row">
                  <div class="col-md-6 mb-3">
                    <label for="Flight Number">Flight Number</label>
                    <input type="text" class="form-control" name = "FlightNumber" id="Flight Number" placeholder = "Flight Number" required>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="New Departure">Departure Time</label>
