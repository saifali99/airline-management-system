      <a role="button" href="/Logout2" class="btn ml-auto" style="background-color:#d9232d;color:white">Logout</a>
    </div>
  </header><!-- End Header -->
  <main id="main">

    <!-- ======= View Flight Section ======= -->
    <section id="viewFlight" class="viewFlight">
      <div class="container">

        <div class="row">
          <div class="col-sm-12">
            <h2 class="viewFlightsHeading">View Flights</h2>
          </div>
        </div>

        <div class="col-sm-12">
                 
          <table class="table">
            <thead class="table-head">
              <tr>
                <th scope="col">Source</th>
                <th scope="col">Destination</th>
                <th scope="col">Flight Number</th>
                <th scope="col">Airline</th>
                <th scope="col">Departure Time</th>
                <th scope="col">Arrival Time</th>
                <th scope="col">Class</th>
                <th scope="col">Price</th>
                <th scope="col">Seats Available</th>
              </tr>
            </thead>
            <tbody >
              <% for(i=0;i<F.length;i++){ %>
              <tr >
               <td name="Flight_Source" value= " <%= F[i].Flight_Source %> " > <%= F[i].Flight_Source %></td>
                <td name = "Destination"> <%= F[i].Flight_Destination %> </td>
                <td name = "FlightNumber"> <%= F[i].Flight_Number %> </td>
                <td name = "Airline"> <%= F[i].Airline_Name %> </td>
                <td name = "Departure"> <%= F[i].DEPARTURE_TIME %> </td>
                <td name = "Arrival"> <%= F[i].ARRIVAL_TIME %> </td>
                <td name = "FlightClass"> <%= F[i].Flight_Class %> </td>
                <td name = "Price"> <%= F[i].P1 %> </td>
                <td name = "Seats"> <%= F[i].S1 %> </td>                               
              </tr> 
              <% } %>

            </tbody>
          </table>
      <!--  </form>-->
        </div>
      </div>
      <div class = "row">
      <div class = "col-12 col-sm-5"></div> 
      <div class = "col-12 col-sm-3"><a role="button" href="/Remove" class="btn ml-auto" style="background-color:#d9232d;color:white">Remove Passed Flights</a></div>
       <div class = "col-12 col-sm-4"></div>           
      </div>
      

 

    </section><!-- End View Flights Section-->

  </main><!-- End #main -->

