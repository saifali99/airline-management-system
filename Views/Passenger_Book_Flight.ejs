    <script type='text/javascript'>
        function addFields(){
            // Number of inputs to create
            var number = document.getElementById("seats").value;
            if(document.getElementById("defaultCheck1").checked) {
                number = number - 1;
            }

            // Container <div> where dynamic content will be placed
            var container = document.getElementById("dynamicForm");
            // Clear previous contents of the container
            while (container.hasChildNodes()) {
                container.removeChild(container.lastChild);
            }
            for (i=1;i<=number;i++){
                var x = document.getElementById("dynamicForm");
                var createform = document.createElement('form');
                x.appendChild(createform);

                var line = document.createElement('hr');
                createform.appendChild(line);

                var heading = document.createElement('h4'); // Heading of Form
                heading.innerHTML = "Passenger " + i;
                createform.appendChild(heading);

                var namelabel = document.createElement('label'); // Create Label for E-mail Field
                namelabel.innerHTML = "Passenger Name";
                createform.appendChild(namelabel);

                var nameelement = document.createElement('input'); // Create Input Field for E-mail
                nameelement.setAttribute("type", "text");
                nameelement.setAttribute("name", "passengerName"+i);
                nameelement.setAttribute("placeholder", "Passenger Name");
                nameelement.setAttribute("class", "form-control");
                createform.appendChild(nameelement);

                var linebreak = document.createElement('br');
                createform.appendChild(linebreak);

                var passportlabel = document.createElement('label'); // Create Label for E-mail Field
                passportlabel.innerHTML = "Passport Number";
                createform.appendChild(passportlabel);

                var passportelement = document.createElement('input'); // Create Input Field for E-mail
                passportelement.setAttribute("type", "text");
                passportelement.setAttribute("name", "passportNumber");
                passportelement.setAttribute("placeholder", "Passport Number");
                passportelement.setAttribute("class", "form-control");
                createform.appendChild(passportelement);
                
                var linebreak = document.createElement('br');
                createform.appendChild(linebreak);
            }
        }
    </script>

