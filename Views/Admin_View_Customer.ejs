    <!-- Main Content-->
    <main id="main">
        <!-- Admin Customer Section -->
        <section id="admincustomer" class="admincustomer">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="admincustomerHeading">Delete Customer</h2>
                    </div>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-6">
                                <form method = "POST" action = "/CustDelete">
                                    <label for="custID">Customer ID</label>
                                    <input type="text" class="form-control" id="custID" name="custID" placeholder="Customer ID">
                                </form>
                            </div>
                            <div class="col-2">
                                <button type="button" class="btn">Delete</button>
                            </div>
                        </div>
                        <table class="table">
                            <thead class="table-head">
                                <tr>
                                    <th scope="col">Customer ID</th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">CNIC Number</th>
                                    <th scope="col">Contact Number</th>
                                    <th scope="col">Passport Number</th>
                                    <th scope="col">Status</th>
                                </tr>
                            </thead>
                
                            <tbody>
                              <% for(i=0;i<F.length;i++){ %>
                              <tr >
                               <td> <%= F[i].Customer_ID %></td>
                                <td> <%= F[i].First_Name %> </td>
                                <td> <%= F[i].Last_Name %> </td>
                                <td> <%= F[i].CNIC %> </td>
                                <td> 0<%= F[i].Contact_Number %> </td>
                                <td> <%= F[i].Passport_Number %> </td>
                                <td> <%= F[i].Status %> </td>                               
                              </tr> 
                              <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Admin Customer Section -->
    </main>
